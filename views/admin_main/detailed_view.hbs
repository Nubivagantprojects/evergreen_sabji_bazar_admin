<script type="text/javascript">
    $(function () {
        $("#transit_select").change(function () {
            if ($(this).val() == "1") {
                $("#ship_partner_div").show();
                $("[name='ship_partner']").prop("required", true);
                $("#track_url_div").show();
                $("[name='track_url']").prop("required", true);
                $("#track_id_div").show();
                $("[name='track_id']").prop("required", true);
            } else {
                $("#ship_partner_div").hide();
                $("[name='ship_partner']").prop("required", false);
                $("#track_url_div").hide();
                $("[name='track_url']").prop("required", false);
                $("#track_id_div").hide();
                $("[name='track_id']").prop("required", false);
            }
        });
    });
</script>
