  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Order Details of Order Id: #{{order.id}}</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              
              <li class="breadcrumb-item active">Order Details</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-12">
          <div class="card">
            
            <!-- /.card-header -->
            <div class="card-body">
              <table id="example3" class="table table-bordered table-striped">
                <thead>
                  <tr>
                    <th>Order Id</th>
                    <th>Order Total</th>
                    <th>Payment Method</th>
                    <th>Phone Number</th>
                    <th>Address</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>#OR0{{order.id}}</td>
                    <td>
                      <div class="sparkbar" data-color="#00a65a" data-height="20">₹ {{order.total}}/-</div>
                    </td>
                    <td>
                      {{!-- {% if order.payment_method == 'COD' %} --}}
                      {{#ifs this.payment_method "COD"}}

                      <div class="sparkbar" data-color="#00a65a" data-height="20">Cash On Delivery</div>
                      {{!-- {% elif order.payment_method == 'RPAY' %} --}}
                        {{else ifs this.payment_method "RPAY" }}
                      <div class="sparkbar" data-color="#00a65a" data-height="20">Online Paymeny</div>
                      {{!-- {% endif %} --}}
                       {{/ifs}}
                    </td>
                    <td>{{this.phone}} , {{this.phone2}}</td>
                    <td>{{this.address}}</td>
                  </tr>
                </tbody>
              </table>
              
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <div class="row">
        <div class="col-12">
          <div class="card">
            
            <!-- /.card-header -->
            <div class="card-body">
              <table id="example2" class="table table-bordered table-striped">
                <thead>
                  <tr>
                    <th>Item Name</th>
                    <th>Order Amount</th>
                    <th>Price</th>
                  </tr>
                </thead>
                <tbody>
                  {{!-- {% for order_item in order_items %} --}}
                  {{#each order_items}}
                  <tr>
                    {{!-- {% for item in items %} --}}
                    {{#each items}}
                    {{!-- {% if order_item.item == item.id %} --}}
                    {{#ifs this.item this.id}}
                    <td>{{this.item_name}}</td>
                    {{!-- {% endif %} --}}
                    {{!-- {% endfor %} --}}
                      {{/ifs}}
                    {{/each}}
                    <td>{{this.quantity}}</td>
                    <td>
                      <div class="sparkbar" data-color="#00a65a" data-height="20">₹ {{this.amount}}/-</div>
                    </td>
                  </tr>
                  {{!-- {% endfor %} --}}
                  {{/each}}
                </tbody>
              </table>
              {% if order.ship_partner or order.track_url or order.track_id %}
            
              {% if n == 'i_t' or n == 'd' or n == 'c' %}
              <br><br>
              <table id="example2" class="table table-bordered table-striped">
                <thead>
                  <tr>
                    <th>Shipping Partner</th>
                    <th>Tracking Url</th>
                    <th>Tracking Id</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>{{this.ship_partner}}</td>
                    <td><a href="{{this.track_url}}" target="_blank">{{this.track_url}}</a></td>
                    <td>
                      <div class="sparkbar" data-color="#00a65a" data-height="20">{{this.track_id}}</div>
                    </td>
                  </tr>
                </tbody>
              </table>
              {{!-- {% endif %} --}}
              {{!-- {% endif %} --}}
               {{/each}}
              <br><br>
              <br><br>
              {{!-- {% if n == 'v' %} --}}
              {{#ifs this.n "v"}}
              <form action="detailedvieworder" method="POST">
                {{!-- {% csrf_token %} --}}
                <input type="text" name="n" value="{{n}}" hidden>
                <input type="text" name="id" value="{{order.id}}" hidden>
                <div class="form-group">
                  <div class="row">
                    <div class="col-md-2">
                      <label for="action">Please Select an Action<font color="red">*</font></label>
                    </div>
                    <div class="col-md-10">
                      <select class="form-control" name="stat" id="transit_select" required>
                        <option value="" selected disabled>Select an Action</option>
                        <option value="1">In Transit</option>
                        <option value="0">Cancel</option>
                      </select>
                    </div>
                  </div>
                  <br><br>
                  <div class="form-group" id="ship_partner_div" style="display: none">
                    <div class="row">
                      <div class="col-md-2">
                        <label for="ship_partner">Shipping Partner Name:<font color="red">*</font></label>
                      </div>
                      <div class="col-md-10">
                        <input type="text" class="form-control" name="ship_partner" id="ship_partner" placeholder="Shipping Partner Name">
                        <span id="errsitid" class="text-danger font-weight-bold"></span>
                      </div>
                    </div><br>
                  </div>
                  <div class="form-group" id="track_url_div" style="display: none">
                    <div class="row">
                      <div class="col-md-2">
                        <label for="track_url">Tracking Url:<font color="red">*</font></label>
                      </div>
                      <div class="col-md-10">
                        <input type="text" class="form-control" name="track_url" id="track_url" placeholder="Tracking Url">
                        <span id="errsitid" class="text-danger font-weight-bold"></span>
                      </div>
                    </div><br>
                  </div>
                  <div class="form-group" id="track_id_div" style="display: none">
                    <div class="row">
                      <div class="col-md-2">
                        <label for="track_id">Tracking Id:<font color="red">*</font></label>
                      </div>
                      <div class="col-md-10">
                        <input type="text" class="form-control" name="track_id" id="track_id" placeholder="Tracking Id">
                        <span id="errsitid" class="text-danger font-weight-bold"></span>
                      </div>
                    </div><br>
                  </div>
                  <span id="errregn" class="text-danger font-weight-bold"></span>
                </div>
                <button type="submit" class="btn btn-success">Confirm</button>
              </form>
              {{!-- {% else %} --}}
              {{else}}
              <form action="detailedvieworder" method="POST">
                {{!-- {% csrf_token %} --}}
                <input type="text" name="n" value="{{n}}" hidden>
                <input type="text" name="id" value="{{order.id}}" hidden>
                <div class="group-input">
                        <label>Do You Verify this Order?<font color="red">*</font></label><br>
                        <div class="row">
                          <div class="col-md-2">
                            <div class="icheck-primary d-inline">
                              <input type="radio" id="Yes1" name="stat" value="1"  required>
                              <label for="Yes1">
                                {% if n == 'uv' %}
                                Verify
                                {% elif n == 'd' %}
                                Unverified
                                {% elif n == 'i_t' %}
                                Deliver
                                {% elif n == 'c' %}
                                Delevered
                                {% endif %}
                              </label>
                            </div>
                          </div>
                          <div class="col-md-2">
                            <div class="icheck-primary d-inline">
                              <input type="radio" id="No1" name="stat" value="0" required>
                              <label for="No1">
                                {% if n == 'uv' %}
                                Cancel
                                {% elif n == 'd' %}
                                Canceled
                                {% elif n == 'i_t' %}
                                Cancel
                                {% elif n == 'c' %}
                                Unverified
                                {% endif %}
                              </label>
                            </div>
                          </div>
                        </div><br>
                </div>
                {% if n == 'uv' or 'i_t' %}
                <div class="form-group">
                  <label for="site id">Any Comment:</label>
                  <input type="text" class="form-control" name="cmnt" placeholder="Any Comment">
                  <span id="errsitid" class="text-danger font-weight-bold"></span>
                </div><br>
                {% endif %}
                {% if n == 'uv' %}
                <button type="submit" class="btn btn-warning">Verify</button>
                {% elif n == 'd' %}
                <button type="submit" class="btn btn-danger">Confirm</button>
                {% elif n == 'i_t' %}
                <button type="submit" class="btn btn-success">Confirm</button>
                {% elif n == 'c' %}
                <button type="submit" class="btn btn-danger">Confirm</button>
                {% endif %}
              </form>
              {% endif %}
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
