    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <div class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1 class="m-0 text-dark">Change Password :</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">

                <li class="breadcrumb-item active">Change Password</li>
              </ol>
            </div><!-- /.col -->
          </div><!-- /.row -->
        </div><!-- /.container-fluid -->
      </div>
      <!-- /.content-header -->
      <!-- Main content -->
      <section class="content">
        <div class="container">
          <div class="row">
            <div class="col-lg-11 col-11">
              {{!-- {% for message in messages %} --}}
              {{#each details}}
              <h5><strong>
                  <font color="red">{{message}}</font>
                </strong></h5>
              {{!-- {% endfor %} --}}
              {{/each}}
              <br>
              <div class="form1">
                <form action="changepassword" method="post" enctype="multipart/form-data">
                  {{!-- {% csrf_token %} --}}
                  <div class="group-input">
                    <label for="current password">
                      <h4><b>Enter current password to confirm <font color="red">*</font></b></h4>
                    </label>
                    <input type="text" name='current_password' placeholder='Current Password' required>
                  </div>
                  <div class="group-input">
                    <label for="new password">
                      <h4><b>Enter new password <font color="red">*</font></b></h4>
                    </label>
                    <input type="text" name='new_password1' placeholder='New Password'
                      pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                      title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
                      required>
                  </div>
                  <div class="group-input">
                    <label for="confirm new password">
                      <h4><b>Re-enter new password <font color="red">*</font></b></h4>
                    </label>
                    <input type="text" name='new_password2' placeholder='Confirm New Password'
                      pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                      title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
                      required>
                  </div>
                  <button type="submit" class="changepassword-submit-btn"><b>Change Password</b></button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </section>



      <!-- /. Main content Ends here-->
    </div>
    <!-- /.content-wrapper -->


















